.row.justify-content-center
  .col-md-5
    .card.shadow-sm
      .card-body
        %h2.card-title.mb-3 Logowanie

        = form_with scope: :user, url: session_path(:user), local: true do |f|
          .mb-3
            = f.label :email, class: "form-label"
            = f.email_field :email, autofocus: true, class: "form-control"

          .mb-3
            = f.label :password, class: "form-label"
            = f.password_field :password, autocomplete: "current-password", class: "form-control"

          - if devise_mapping.rememberable?
            .form-check.mb-3
              = f.check_box :remember_me, class: "form-check-input"
              = f.label :remember_me, class: "form-check-label"

          = f.submit "Zaloguj", class: "btn btn-primary w-100"

        %hr
        = link_to "Załóż konto", new_user_registration_path, class: "btn btn-link p-0"
        %br/
        = link_to "Zapomniałeś hasła?", new_user_password_path, class: "btn btn-link p-0"

